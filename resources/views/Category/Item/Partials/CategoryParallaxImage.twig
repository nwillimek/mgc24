<div class="container-max p-t-3">
	<div class="row">
		<div class="col-sm-12 col-md-5">
			<div class="parallax-img-container"{% if category.details[0].imagePath is not empty %} style="background-image: url(/documents/{{ category.details[0].imagePath }});"{% endif %}></div>
		</div>
		<div class="col-sm-12 col-md-7">
			<div class="parallax-text-wrapper">
	            <div class="parallax-text-container">
	                <h1 class="h2 p-t-2 category-title">{{ category.details[0].name | raw }}</h1>

	                {% if showCategoryDescription %}
	                    <div id="category-description-container" class="category-description m-b-1">{{ category.details[0].description | raw }}</div>
	                {% endif %}
	            </div>
	        </div>
		</div>
	</div>
</div>